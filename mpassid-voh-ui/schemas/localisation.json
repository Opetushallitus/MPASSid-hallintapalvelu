{
  "openapi": "3.0.1",
  "info": {
    "title": "Lokalisointi API",
    "description": "Lokalisoinnin tarjoamat rajapinnat",
    "version": "0"
  },
  "servers": [
    { "url": "https://virkailija.testiopintopolku.fi/lokalisointi/cxf/rest" }
  ],
  "paths": {
    "/v1/localisation": {
      "get": {
        "operationId": "getLocalisations",
        "parameters": [
          {
            "name": "key",
            "in": "query",
            "schema": { "type": "string" }
          },
          {
            "name": "category",
            "in": "query",
            "schema": { "type": "string" }
          },
          {
            "name": "locale",
            "in": "query",
            "schema": { "type": "string" }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/LocalisationRDTOs" },
                "examples": {
                  "localisation": {
                    "value": [
                      {
                        "category": "mpassid",
                        "key": "+2IAHp",
                        "id": 123,
                        "locale": "fi",
                        "value": "(palvelun lyhyt kuvaus, muokattu)",
                        "description": "etusivu"
                      },
                      {
                        "category": "mpassid",
                        "key": "foo",
                        "id": 456,
                        "locale": "fi",
                        "value": "Foo"
                      },
                      {
                        "category": "mpassid",
                        "key": "attribuutti.foo",
                        "id": 789,
                        "locale": "fi",
                        "value": "Foo"
                      },
                      {
                        "category": "mpassid",
                        "key": "attribuutti.baz",
                        "id": 789,
                        "locale": "fi",
                        "value": "Baz"
                      }
                    ]
                  }
                }
              }
            }
          }
        }
      }
    },
    "/v1/localisation/update": {
      "post": {
        "operationId": "updateLocalisations",
        "responses": {
          "200": {
            "description": "Null response"
          }
        }
      }
    },
    "/v1/localisation/{id}": {
      "delete": {
        "operationId": "deleteLocalisation",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "schema": { "type": "string" }
          }
        ],
        "responses": {
          "200": {
            "description": "Null response"
          }
        }
      },
      "put": {
        "operationId": "updateLocalisation",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "schema": { "type": "string" }
          }
        ],
        "responses": {
          "200": {
            "description": "Null response"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "LocalisationRDTO": {
        "description": "Lokalisointiarvo.",
        "properties": {
          "modified": { "type": "string", "format": "date-time" },
          "modifiedBy": { "type": "string" },
          "accesscount": { "type": "integer", "format": "int64" },
          "accessed": { "type": "string", "format": "date-time" },
          "created": { "type": "string", "format": "date-time" },
          "createdBy": { "type": "string" },
          "force": { "type": "boolean", "description": "Tallennuksen pakotus" },
          "category": { "type": "string", "description": "Kategoria" },
          "description": {
            "type": "string",
            "description": "Käännöksen kuvaus"
          },
          "locale": {
            "type": "string",
            "description": "Käännöksen kielikoodi"
          },
          "value": { "type": "string", "description": "käännösarvo" },
          "key": { "type": "string", "description": "Käännösavain" },
          "id": {
            "type": "integer",
            "format": "int64",
            "description": "Tietokanta-avain"
          }
        }
      },
      "LocalisationRDTOs": {
        "type": "array",
        "items": { "$ref": "#/components/schemas/LocalisationRDTO" }
      }
    }
  }
}
