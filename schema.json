  "paths": {
    "/api/v1/integration/{id}": {
      "get": {
        "tags": ["integration-controller"],
        "summary": "Get specific integration",
        "operationId": "getIntegration",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "integer", "format": "int64" }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/Integration" },
                "examples": {
                  "integration": {}
                }
              }
            }
          }
        }
      },
      "put": {
        "tags": ["integration-controller"],
        "operationId": "updateIntegration",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "integer", "format": "int64" }
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/Integration" }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/Integration" }
              }
            }
          }
        }
      },
      "delete": {
        "tags": ["integration-controller"],
        "operationId": "deleteIntegration",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "integer", "format": "int64" }
          }
        ],
        "responses": { "200": { "description": "OK" } }
      }
    },
    "/api/v1/integration": {
      "post": {
        "tags": ["integration-controller"],
        "operationId": "addIntegration",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/Integration" }
            }
          },
          "required": true
        },
        "responses": { "200": { "description": "OK" } }
      }
    },
    "/api/v1/organization": {
      "get": {
        "tags": ["organization-controller"],
        "operationId": "getOrganizations",
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": { "$ref": "#/components/schemas/Organization" }
                }
              }
            }
          }
        }
      }
    },
    "/api/v1/integration/search": {
      "get": {
        "tags": ["integration-controller"],
        "summary": "Search paged integrations",
        "operationId": "getIntegrationsSearchPageable",
        "parameters": [
          {
            "name": "search",
            "in": "query",
            "required": true,
            "schema": { "type": "string" }
          },
          {
            "in": "query",
            "name": "role",
            "schema": {
              "type": "string"
            }
          },
          {
            "in": "query",
            "name": "type",
            "schema": {
              "type": "string"
            }
          },
          {
            "in": "query",
            "name": "deploymentPhase",
            "schema": {
              "type": "number"
            }
          },
          {
            "in": "query",
            "name": "page",
            "schema": {
              "minimum": 0,
              "type": "integer",
              "format": "int32"
            }
          },
          {
            "in": "query",
            "name": "size",
            "schema": {
              "minimum": 1,
              "type": "integer",
              "format": "int32"
            }
          },
          {
            "in": "query",
            "name": "sort",
            "schema": {
              "type": "array",
              "items": { "type": "string" }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/PageIntegration" },
                "examples": {
                  "searchIntegrations": {}
                }
              }
            }
          }
        }
      }
    },
    "/api/v1/integration/page": {
      "get": {
        "tags": ["integration-controller"],
        "summary": "Get paged integrations",
        "operationId": "getIntegrationsPageable",
        "parameters": [
          {
            "name": "pageable",
            "in": "query",
            "required": true,
            "schema": { "$ref": "#/components/schemas/Pageable" }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/PageIntegration" }
              }
            }
          }
        }
      }
    },
