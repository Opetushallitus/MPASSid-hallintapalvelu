    "/api/v1/organization": {
      "get": {
        "tags": ["organization-controller"],
        "operationId": "getOrganizations",
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "*/*": {
                "schema": {
                  "type": "array",
                  "items": { "$ref": "#/components/schemas/Organization" }
