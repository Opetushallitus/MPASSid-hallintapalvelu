        "requestBody": {
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/Integration" }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "*/*": {
                "schema": { "$ref": "#/components/schemas/Integration" }
              }
            }
          }
        }
      },
